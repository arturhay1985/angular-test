/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@env": [
        "src/environments/environment"
      ],
      "@models/*": [
        "src/app/core/models/*"
      ],
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@globals/*": [
        "src/app/core/globals/*"
      ],
      "@interceptors/*": [
        "src/app/core/interceptors/*"
      ],
      "@components/*": [
        "src/app/shared/components/*"
      ],
      "@directives/*": [
        "src/app/shared/directives/*"
      ],
      "@pipes/*": [
        "src/app/shared/pipes/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@assets/*": [
        "src/assets/images/*"
      ],
    }
  }
}